html
    head
        link(rel='stylesheet', href='styles/styles.css', type='text/css')
        title  Super Sprinter 3000
    body
        h1 Edit User Story:
    form(id="addForm" method="post" action="/edited")
        p Story title:
        input(name="storyTitle")
        p User Story:
        textarea(name="userStory" cols="30", rows="10" placeholder="Describe yourself here...")
        p Acceptance criteria:
        textarea(name="criteria" cols="30", rows="10")
        p Business value:
        input(name="value")
        p Estimation:
        input(name="estimation")
        select
            option(value="planning") planning
            option(value="todo") todo
            option(value="in progress") in progress
            option(value="review") review
            option(value="done") done
        button(type="submit" id="editStory") Edit User Story!